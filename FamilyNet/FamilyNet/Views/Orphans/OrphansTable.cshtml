@model IEnumerable<FamilyNet.Models.Orphan>

@{
    ViewData["Title"] = "OrphansTable";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Список детей-сирот <a asp-action="Create" class="btn btn-primary float-right">Создать</a></h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Orphanage)
            </th>
            <th>
                Действия
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName.Patronymic)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Birthday)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Orphanage.Name)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID"><i class="far fa-edit fa-fw"></i></a>
                    <a asp-action="Details" asp-route-id="@item.ID"><i class="fas fa-info fa-fw"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.ID"><i class="far fa-trash-alt fa-fw"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
