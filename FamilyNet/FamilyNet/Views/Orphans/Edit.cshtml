@model FamilyNet.Models.Orphan

@{
    ViewData["Title"] = "Edit";
}

<div class="container register">
    <div class="row">
        <div class="col-md-9 register-right">
            <form asp-action="Edit">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                        <h3 class="register-heading">Edit an Orphan</h3>
                        <div class="row register-form">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FullName.Name" class="control-label"></label>
                                    <input asp-for="FullName.Name" class="form-control" />
                                    <span asp-validation-for="FullName.Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName.Surname" class="control-label"></label>
                                    <input asp-for="FullName.Surname" class="form-control" />
                                    <span asp-validation-for="FullName.Surname" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FullName.Patronymic" class="control-label"></label>
                                    <input asp-for="FullName.Patronymic" class="form-control" />
                                    <span asp-validation-for="FullName.Patronymic" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Birthday" class="control-label"></label>
                                    <input asp-for="Birthday" class="form-control" />
                                    <span asp-validation-for="Birthday" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Contacts.Phone" class="control-label"></label>
                                    <input asp-for="Contacts.Phone" class="form-control" />
                                    <span asp-validation-for="Contacts.Phone" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Contacts.Email" class="control-label"></label>
                                    <input type="email" asp-for="Contacts.Email" class="form-control" />
                                    <span asp-validation-for="Contacts.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Orphanage.ID" class="control-label"></label>
                                    <input asp-for="Orphanage.ID" class="form-control" />
                                    <span asp-validation-for="Orphanage.ID" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-12 text-center">
                                <input type="submit" class="btn btn-primary" value="Edit" />
                                <a asp-action="Index" class="btn btn-primary">Back to List</a>
                            </div>    
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

