@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model FamilyNet.Models.Volunteer

@{
    ViewData["Title"] = "Delete";
}

<h1>@SharedLocalizer["Delete"]</h1>

<h3>@ViewData["AreYouSure"]?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["PersonName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName.Name)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["PersonSurname"]
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName.Surname)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["FathersName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName.Patronymic)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Country"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Country)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["City"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Region"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Region)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Street"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["House"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.House)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Birthday"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Rating"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <a asp-action="Index"><i class="fas fa-chevron-circle-left"></i></a>
        <input type="submit" value=@SharedLocalizer["Delete"] class="btn btn-danger" />
    </form>
</div>