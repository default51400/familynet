@using Microsoft.AspNetCore.Mvc.Localization
@inject IHtmlLocalizer<SharedResource> SharedLocalizer
@model FamilyNet.Models.Volunteer

@{
    ViewData["Title"] = "Details";
}

    <h1>@SharedLocalizer["Details"]</h1>

<div>
    <h4>@SharedLocalizer["Volunteer"]</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @SharedLocalizer["PersonName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName.Name)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["PersonSurname"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName.Surname)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["FathersName"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullName.Patronymic)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Country"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Country)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["City"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.City)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Region"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Region)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Street"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.Street)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["House"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address.House)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Birthday"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            @SharedLocalizer["Rating"]
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index"><i class="fas fa-chevron-circle-left"></i></a>
    <a asp-action="Edit" asp-route-id="@Model.ID"><i class="fa fa-marker fa-lg"></i></a>
</div>